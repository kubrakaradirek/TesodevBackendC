{
  "Routes": [
    //Order microservice
    {
      "DownstreamPathTemplate": "/api/{everything}", //istek 
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 1451
        }
      ],
      "UpstreamPathTemplate": "/services/order/{everything}", //isteğin geleceği
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "Http"
    },

    //Customer microservice
    {
      "DownstreamPathTemplate": "/api/{everything}", //istek 
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 1452
        }
      ],
      "UpstreamPathTemplate": "/services/customer/{everything}", //isteğin geleceği
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "Http"
    }

  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}
